<body>
  <div class="container">
    <div class=" center">

      <iframe name="hiddenFrame" class="hide" hidden></iframe>
      <form method="post" class="form" action="/api/times" target="hiddenFrame">
        <div class="time_label-container">
          <div class="line d-flex justify-content-end">

            <label class="form__label" for="user" hidden> User:

            </label>
            <input type="text" class="form__input" name="user" id="user" hidden />
          </div>
          <div class="line d-flex justify-content-end">

            <label class="form__label" for="num_work"> Work Sets:

            </label>
            <input type="text" class="form__input" name="num_work" value="1" id="num_work" />
          </div>
          <div class="line d-flex justify-content-end">

            <label class="form__label" for="time_work"> Work Time:

            </label>
            <input type="text" class="form__input" name="time_work" value="600" id="time_work" />
          </div>
          <div class="line d-flex justify-content-end">
            <label class="form__label" for="num_break"> Break Sets:
            </label>
            <input type="text" class="form__input" name="num_break" value="0" id="num_break" />
          </div>
          <div class="line d-flex justify-content-end">
            <label class="form__label" for="time_break"> Break Time:
            </label>
            <input type="text" class="form__input" name="time_break" value="0" id="time_break" />
          </div>




          <div class="line d-flex justify-content-end">
            <label class="form__label " for="sets"> Sets:
            </label>
            <input type="text" class="form__input" name="sets" value="10" id="sets" />
          </div>







          <div class="line d-flex justify-content-end">
            <label class="form__label" for="end_time" hidden> Ending Time:
            </label>
            <input type="text" class="form__input" name="end_time" id="end_time" hidden />
          </div>
          <div class="line d-flex justify-content-end">
            <label class="form__label" for="end_time" hidden> Paused:
            </label>

            <input type="checkbox" class="form__label" name="paused" value="false" checked hidden />
          </div>
          <!-- <div class="time_label-container"> -->
          <label class="form__label" id="seconds_time" for="seconds_time"> 0</label>
          <label class="form__label" id="current_time" for="current_time"> 0</label>
          <!-- </div> -->


          <button type="submit" class="btn btn-success btnSubmit">Submit</button>
        </div>
      </form>
      <form method="get" action="/api/times/" hidden>
        <br />
        <button type="submit">View all</button>
      </form>
      <!-- Client1 -->

      <!-- <button onclick="sendMessage()" class="submit">Send Msg</button> -->
    </div>
  </div>
